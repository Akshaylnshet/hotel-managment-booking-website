<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>edit new listing</h2>
    <form action="/listings/<%=listing._id%>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">title</label>
        <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
        <div class="valid-feedback">title is good</div>
        </div>
            <div class="mb-3">
                <label for="description" class="form-lable">description</label>
            <textarea type="text" name="listing[description]"class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">enter the short description</div>
        </div>
        <div class="mb-3">
            original listing image <br>
        <img src="<%=originalimageurl  %>" alt=""></div>
        <div class="mb-3">
            <label for="image" class="form-lable">upload image </label>
        <input type="file" name="listing[image]"  class="form-control" >
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lable" >price</label>
            <input type="number" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
            <div class="invalid-feedback">price not valid</div>
        </div>
            <div class="mb-3 col-md-8 ">
                <label for="country" class="form-lable">country</label>
                <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                <div class="invalid-feedback">enter the country</div>
            </div>
        </div>
        <div class="mb-3">
        
            <label for="location" class="form-lable">location</label>
        <input type="text" name="listing[location]" value="<%=listing.location%>" class="form-control" required>
        <div class="invalid-feedback">enter the location</div>
        </div>
      
        <button class=" btn-dark edit-btn mt-3">edit</button>
    </form>
</div>
</div>

