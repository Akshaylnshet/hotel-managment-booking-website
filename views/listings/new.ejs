<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>create new listing</h2>
    <form  method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">title</label>
        <input type="text" 
        name="listing[title]" 
        placeholder="enter title" 
        class="form-control"
        required>
        <div class="valid-feedback">title is good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">description</label>
            <textarea type="text" 
            name="listing[description]" 
            class="form-control" required></textarea>
            <div class="invalid-feedback">enter the short description</div>
        </div>
       <div class="mb-3">
        <label for="image" class="form-lable">upload listing image </label>
        <input type="file" 
        name="listing[image]" 
        class="form-control"
        required>
       </div>

       <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">price</label>
            <input type="text"
             name="listing[price]"
              placeholder="1200"
              class="form-control"
              required>
              <div class="invalid-feedback">price not valid</div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="country" class="form-lable">country</label>
            <input type="text" 
            name="listing[country]" 
            placeholder="india"
            class="form-control"
            required>
            <div class="invalid-feedback">enter the country</div>
           </div>
           
       </div> 
        
       <div class="mb-3">
        
        <label for="location" class="form-lable">location</label>
        <input type="text" 
        name="listing[location]" 
        placeholder="davangere"
        class="form-control"
        required>
        <div class="invalid-feedback">enter the location</div>
       </div> 
       
       <button class="btn btn-dark add-btn mt-3">add</button>
       <br><br>
    </form>
</div>
</div>
